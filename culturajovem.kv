				Color:
					rgba: (1, 1, 1, 1)
				Rectangle:
					size: self.size
					pos: self.pos
			Button:
				text: 'gregori'
			ButtonMenuCentro:
				text: 'gregori'
			Button:
				text: 'gregori'

<BoxInformations@BoxLayout>
	canvas:
		Color:
			rgb: (1, 1, 1)
		Ellipse:
			size: (self.height/2)/2, (self.height/2)/2
			pos: self.pos
		Ellipse:
			size: (self.height/2)/2, (self.height/2)/2
			pos: self.x, self.y + self.height - (self.height/2)/2
		Ellipse:
			size: (self.height/2)/2, (self.height/2)/2
			pos: self.x + self.width - (self.height/2)/2, self.y
		Ellipse:
			size: (self.height/2)/2, (self.height/2)/2
			pos: self.x + self.width - (self.height/2)/2, self.y + self.height - (self.height/2)/2
		Rectangle:
			size: self.width - (self.height/2)/2, self.height
			pos: self.x + ((self.height/2)/2)/2, self.y
		Rectangle:
			size: (self.height/2)/2, self.height - (self.height/2)/2
			pos: self.x, self.y + ((self.height/2)/2)/2
		Rectangle:
			size: (self.height/2)/2, self.height - (self.height/2)/2
			pos: self.x + self.width - (self.height/2)/2, self.y + ((self.height/2)/2)/2	

<ButtonMenuCentro@ButtonBehavior+Label>
	canvas.before:
		Color: 
			rgba: (0.45, 0.6, 0.7, 1)
		Ellipse:
			size: self.height + self.height/2, self.height + self.height/2
			pos: self.x + self.width/2 - self.height + self.height/2, self.y